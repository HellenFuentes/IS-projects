@page "/Addgrupos"
@using Examen01_B93082.Data.Entities
@using Examen01_B93082.Data.Services
@inject AddGrupoInvestigacionService addGrupoService
@inject NavigationManager NavigationManager

<h3>Grupos de Investigacion</h3>

<form>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="Id" class="control-label">Id (debe ser un id no existente)</label>
                <input form="Id" class="form-control" @bind="@grupo.Id" />
            </div>
            <div class="form-group">
                <label for="Nombre" class="control-label">Nombre</label>
                <input form="Nombre" class="form-control" @bind="@grupo.Nombre" />
            </div>
            <div class="form-group">
                <label for="Descripcion" class="control-label">Descripcion</label>
                <input form="Descripcion" class="form-control" @bind="@grupo.Descripcion" />
            </div>
            <div class="form-group">
                <label for="FechaCreacion" class="control-label">FechaCreacion</label>
                <input form="FechaCreacion" class="form-control" @bind="@grupo.FechaCreacion" />
            </div>
            <div class="form-group">
                <label for="Coordinador" class="control-label">Coordinador (id de coordinador)</label>
                <input form="Coordinador" class="form-control" @bind="@grupo.Coordinador" />
            </div>
            <div class="form-group">
                <label for="Investigadores" class="control-label">Investigadores (id de investigador)</label>
                <input form="Investigadores" class="form-control" @bind="@grupo.Investigadores" />
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@CreateGroup" value="Save" />
                <input type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel" />
            </div>
        </div>
    </div>
</form>

@code{
    GruposInvestigacion grupo = new();

    protected async void CreateGroup()
    {
        await addGrupoService.InsertGrupoInvestigacion(grupo);
        NavigationManager.NavigateTo("/grupos");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("/grupos");
    }

}
